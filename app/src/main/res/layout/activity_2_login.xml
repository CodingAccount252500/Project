<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dg4"
    android:padding="5dp"
    tools:context="._2Login">
    <de.hdodenhof.circleimageview.CircleImageView

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_imae"
        android:layout_width="190dp"
        android:layout_height="175dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="13dp"
        android:src="@drawable/profile"

        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email :"

        android:layout_margin="5dp"
        android:textSize="6pt"
        android:textStyle="bold"
        android:textColor="#EEEEEE"/>
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/emailTextField"
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="textEmailAddress"
        android:text=""
        android:textColor="#000"
        android:textSize="6pt"
        app:bootstrapBrand="info"
        app:bootstrapSize="md" />
    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:textColor="#EEEEEE"
        android:layout_margin="5dp"
        android:textSize="6pt"
        android:textStyle="bold"/>
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/passwordTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"

        android:hint="password"
        android:inputType="numberPassword"
        android:textColor="#130400"
        android:textSize="10pt"
        app:bootstrapBrand="info"
        android:layout_margin="5dp"
        app:bootstrapSize="md" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="28dp">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#130400"
            android:baselineAligned="false"
            android:text="Login"
            android:onClick="OnLoginButtonClicked"
            android:textStyle="bold"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />



    </LinearLayout>
    <TextView
        android:id="@+id/createNewTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:onClick="OnSignupLabelClicked"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textSize="6pt"
        android:textStyle="bold"
        android:textColor="#EEEEEE"/>

    <TextView
        android:id="@+id/ResetTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Password ?"
        android:onClick="OnResetClicked"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textSize="6pt"
        android:textStyle="bold"
        android:textColor="#EEEEEE"/>

</LinearLayout>